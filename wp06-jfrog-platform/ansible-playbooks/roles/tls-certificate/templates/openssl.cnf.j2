[ req ]
default_bits = 4096
prompt = no
default_md = sha256
distinguished_name = dn
req_extensions = req_ext

[ dn ]
C  = {{ country }}
ST = {{ state }}
L  = {{ location }}
O  = {{ organization }}
CN = {{ common_name }}

[ req_ext ]
subjectAltName = @alt_names

[ alt_names ]
{% for i in range(1, SAN | length + 1) %}
DNS.{{ i }} = {{ SAN[i - 1] }}
{% endfor %}
